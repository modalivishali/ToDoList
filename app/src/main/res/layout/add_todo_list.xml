<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Todo list title."
        android:layout_alignParentTop="true"
        android:id="@+id/add_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Summary"
        android:layout_below="@id/add_title"
        android:id="@+id/add_summary" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Due date (Format: MM-DD-YYYY)."
        android:id="@+id/add_due_date"
        android:layout_below="@id/add_summary"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Total description"
        android:layout_below="@id/add_due_date"
        android:id="@+id/add_description" />
</RelativeLayout>
